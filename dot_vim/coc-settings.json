{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    },
  },

  // coc
  "coc.preferences.formatOnSaveFiletypes": ["go"],

  // coc-angular
  "angular.trace.server": "off",
  "angular.log": "off",
  "angular.view-engine": false,
  "angular.suggest.includeCompletionsWithSnippetText": true,
  "angular.enable-strict-mode-prompt": true,

  // coc-go
  "go.goplsPath": "/home/shejialuo/Tool/go/bin/gopls",

}
